@using GarangeInventory.Storage
@inject Data.UserService UserData
@inject Data.DataService DataStorages


<h3>List of accessible containers:</h3>

<ol>
    @foreach (StorageUnit storage in storages)
    {
        foreach (User user in storage.Users)
        {
            if (user.Name == UserData.User.Name)
            {
                <li>@storage.Name</li>
                <ShelfUnits storage="@storage"></ShelfUnits>
            }
        }
    }
</ol>

@code {
    public List<StorageUnit>? storages { get; set; }

    protected override void OnInitialized()
    {
        storages = DataStorages.Storages;
    }



}
