<h3>Storage: @DisplayStorageName() </h3>

<QuickGrid Items="@GetItemsShelfUnitQueryable()">
    <PropertyColumn Property="@(item => item.Name)" Title="Item Name" Sortable="true" />
</QuickGrid>


